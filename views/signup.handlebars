<div class="d-flex row justify-content-center pt-4 border-solid-dark">
<form class="signup-form col-8">
    <h2 class="bg-dark text-light p-3">Sign up</h2>
     <div class="form-group">
        <label for="username-signup">Username:</label>
        <input type="text" class="form-control" id="username-signup" placeholder="username"/>
    </div>
    <div class="form-group">
        <label for="password-signup">Password:</label>
        <input type="password" class="form-control" id="password-signup" placeholder="password"/>
    </div>
    <div>
        <button type="submit" class="btn btn-dark btn-lg">sign up</button>
    </div>
    <a href="/login">Login instead</a>
</form>
</div>

<script src="/javascript/signup.js"></script>