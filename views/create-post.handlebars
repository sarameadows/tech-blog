<div class="d-flex justify-content-center row"
    <div class="card justify-content-center">
        <div class="card-body col-8">
            <h2 class="card-title">Create a New Post</h2>
            <div class="card-text">
                <form class="new-post-form">
                    <div class="form-group">
                        <label for="post-title" class="align-middle">Title:</label>
                        <input type="text" id="post-title" class="col-12" name="post-title" placeholder="Title"/>
                        <label for="post-text" class="align-middle mt-2">Content: </label>
                        <textarea name="post-text" class="col-12"></textarea>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark col-3 mr-1 btn-lg text-light">Create Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/create-post.js"></script>