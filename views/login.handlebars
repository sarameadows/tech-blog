<div class="d-flex row justify-content-center pt-4 border-solid-dark">
<form class="login-form col-8">
    <h2 class="bg-dark text-light p-3">Login</h2>
     <div class="form-group">
        <label for="username-login">Username:</label>
        <input type="text" class="form-control" id="username-login" placeholder="username"/>
    </div>
    <div class="form-group">
        <label for="password-login">Password:</label>
        <input type="password" class="form-control" id="password-login" placeholder="password"/>
    </div>
    <div>
        <button type="submit" class="btn btn-dark btn-lg">login</button>
    </div>
    <a href="/signup">Sign up instead</a>
</form>
</div>

<script src="/javascript/login.js"></script>