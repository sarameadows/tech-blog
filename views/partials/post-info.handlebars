<article class="card d-flex justify-content-center">
    <div class="card-header col-12 d-flex flex-wrap justify-content-between">
        <h3><a href="/post/{{id}}" class="text-decoration-none text-dark">{{title}}</a></h3>
        <p>by {{user.username}} on {{format_date created_at}}</p>
    </div>
    <div class="card-body col-12">
        <p>{{text}}</p>
    </div>
</article>